%h1
  = @account.description

.actions
  =link_to :action => :edit do
    edit account
    &rarr;

  =link_to new_account_project_path(@account.id)  do
    add project
    &rarr;

.projects

  %ul.index
    - @account.projects.each do |p|
      %li
        .id= link_to p.id, account_project_path(@account.id, p.id)
        .description= p.description

