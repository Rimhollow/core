.actions
  =link_to :action => :new do
    add user
    &rarr;

  - if @active
    =link_to :action => :index, :inactive => true do
      inactive users
      &rarr;
  - else
    =link_to :action => :index do
      active users
      &rarr;

%ul.users

  - @users.each do |u|

    %li
      .icon= gravatar u, :size => 40
      .id= link_to u.id, user_path(u.id)
      .name
        = "#{u.last_name}, #{u.first_name}"
      .x= link_to u.account.id, '#' #account_path(u.account.id)
