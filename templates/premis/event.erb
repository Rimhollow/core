<event xmlns="info:lc/xmlns/premis-v2">
  <eventIdentifier>
    <eventIdentifierType>URI</eventIdentifierType>
    <eventIdentifierValue><%= options[:id] %></eventIdentifierValue>
  </eventIdentifier>
  <eventType><%= options[:type] %></eventType>
  <eventDateTime><%= options[:time] || Time.now.xmlschema %></eventDateTime>
  <eventOutcomeInformation>
    <eventOutcome><%= options[:outcome] %></eventOutcome>
  </eventOutcomeInformation>

  <% options[:linking_objects].each do |uri| %>
  <linkingObjectIdentifier>
    <linkingObjectIdentifierType>URI</linkingObjectIdentifierType>
    <linkingObjectIdentifierValue><%= uri %></linkingObjectIdentifierValue>
  </linkingObjectIdentifier>
  <% end %>

  <% options[:linking_agents].each do |uri| %>
  <linkingAgentIdentifier>
    <linkingAgentIdentifierType>URI</linkingAgentIdentifierType>
    <linkingAgentIdentifierValue><%= uri %></linkingAgentIdentifierValue>
  </linkingAgentIdentifier>
  <% end %>

</event>

